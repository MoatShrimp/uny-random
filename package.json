{
  "name": "uny-random",
  "version": "1.0.1",
  "description": "A JavaScript implementation of the PRNG used by the Unity game engine.",
  "homepage": "https://github.com/MoatShrimp/uny-random-ts/blob/main/README.md",
  "repository": "github:MoatShrimp/uny-random-ts",
  "type":"module",
  "files": ["lib/**/"],
  "main": "lib/UnyRandom.js",
  "types": "lib/UnyRandom.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-to-json": "jest --json | python -m json.tool --indent=2 > src/__tests__/test-results.json",
    "lint": "eslint --ext .ts src",
    "lint-fix": "eslint --fix --ext .ts src",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm test && pnpm run lint",
    "preversion": "pnpm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "jest": {
    "verbose": false,
    "roots": ["src"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "prefer-const": "error",
      "no-bitwise": 0,
      "no-plusplus": 0,
      "import/extensions": 0
    },
    "settings": {
      "import/extensions": [
        ".ts"
      ],
      "import/paths": [
        "src"
      ]
    }
  }
}
